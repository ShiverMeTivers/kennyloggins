            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/ufw.log",
            "log_group_name": "Linux-ufw",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/iptables*",
            "log_group_name": "Linux-iptables",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/sshd.log",
            "log_group_name": "Linux-sshd",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          }
        ]
      }
    }
  }
