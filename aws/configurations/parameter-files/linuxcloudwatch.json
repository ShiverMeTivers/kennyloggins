{
  "agent": {
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/messages",
            "log_group_name": "Linux-messages",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/syslog",
            "log_group_name": "Linux-syslog",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/secure",
            "log_group_name": "Linux-secure",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/auth.log",
            "log_group_name": "Linux-auth",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/cron",
            "log_group_name": "Linux-cron",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/faillog",
            "log_group_name": "Linux-faillog",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/wtmp",
            "log_group_name": "Linux-wtmp",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/btmp",
            "log_group_name": "Linux-btmp",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/audit/audit",
            "log_group_name": "Linux-audit",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/lastlog",
            "log_group_name": "Linux-lastlog",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 60
          },
          {
            "file_path": "/var/log/apache/*",
            "log_group_name": "Linux-apache",
